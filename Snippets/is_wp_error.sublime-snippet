if ( is_wp_error( ${1:\$response} ) ) {
   \$error_message = ${1:\$response}->get_error_message();
   echo "Something went wrong: \$error_message";
} else {
   echo '<pre>' . print_r( ${1:\$response}, 1 ). echo '</pre>';
}
